<div class="container">
  <div class="row">
    <div class="col-xs-6 col-sm-4 col-sm-offset-4" style="background-color: #b6b7b8; overflow: visible; padding: 0 15px 15px 15px">
      <form class="form-horizontal" role="form">

          <h2>Sign up</h2>
          
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :username, class: "col-xs-3 control-label"%>
            <div class="col-sm-9">
              <%= f.text_field :username, autofocus: true, class: "form-control" %>
            </div>
        </div>
        <div class="form-group">
          <%= f.label :email, class: "col-xs-3 control-label" %>
          <div class="col-sm-9">
            <%= f.email_field :email, class: "form-control"%>
          </div>
        </div>
        <div class="form-group">  
              <%= f.label :password, class: "col-xs-3 control-label"%>
            <div class="col-sm-9">
              <%= f.password_field :password, autocomplete: "off", class: "form-control"%>
            </div>
        </div>
        <div class="form-group">          
              <%= f.label :password_confirmation, class: "col-xs-3 control-label" %>
              <div class="col-sm-9">
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password Confirmation" %>
              </div>
        </div>
        <div class="form-group">
            <div class="col-xs-3 col-xs-offset-9"><%= f.submit "Sign up", class: "btn btn-default"%></div>
          <% end %>
        </div>
          <%= render "devise/shared/links" %>
        </div>
      </form>
    </div>
  </div>
</div>
