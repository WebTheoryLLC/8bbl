<div class="container">
  <div class="row">
    <div class="col-xs-6 col-sm-4 col-sm-offset-4">
      <h2>Edit Settings</h2>
      
      <%= bootstrap_form_for(@user, method: :put, layout: :horizontal, label_col: "col-sm-5", control_col: "col-sm-7") do |f| %>
        <%= f.text_field :username %>       
        <%= f.text_field :first_name %>
        <%= f.text_field :last_name %>
        <%= f.text_field :bio %>
        <%= f.text_field :twitter_handle %>
        <%= f.text_field :twitch_handle %>
        <%= f.text_field :giant_bomb_handle %>
        <%= f.email_field :email, autofocus: true %>      
        <%= f.submit "Update" %>
      <% end %>
      
      <%= link_to "Back", :back %>
    </div>
  </div>
</div>

